{
  "name": "biopocket-backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "anonymize": "node scripts/anonymize.js",
    "create-admin": "node scripts/create-admin.js",
    "dev": "concurrently \"npm run dev:docs\" \"npm run dev:server\"",
    "dev:docs": "npm run docs && concurrently \"npm run docs:serve\" \"npm run docs:watch\"",
    "dev:server": "nodemon",
    "docs": "npm run docs:clean && concurrently \"npm run docs:api\" \"npm run docs:src\"",
    "docs:api": "mkdirp docs/api && raml2html -i server/api/index.raml -o docs/api/index.html",
    "docs:api:clean": "rimraf docs/api",
    "docs:api:watch": "onchange \"server/**/*.raml\" -- npm run docs:api",
    "docs:clean": "concurrently \"npm run docs:api:clean\" \"npm run docs:src:clean\"",
    "docs:serve": "node scripts/serve-docs.js",
    "docs:src": "jsdoc -c jsdoc.json",
    "docs:src:clean": "rimraf docs/src",
    "docs:src:watch": "onchange \"server/**/*.js\" \"utils/**/*.js\" -- npm run docs:src",
    "docs:watch": "concurrently \"npm run docs:api:watch\" \"npm run docs:src:watch\"",
    "doctoc": "doctoc --notitle --github README.md DEVELOPMENT.md",
    "migrate": "knex migrate:latest",
    "migrate:make": "knex migrate:make",
    "migrate:rollback": "knex migrate:rollback",
    "migrate:test": "cross-env NODE_ENV=test knex migrate:latest",
    "migrate:test:rollback": "cross-env NODE_ENV=test knex migrate:rollback",
    "sample-data": "node scripts/sample-data.js",
    "start": "cross-env DEBUG=biopocket:* node ./bin/www",
    "test": "cross-env NODE_ENV=test BCRYPT_COST=1 LOG_LEVEL=WARN nyc --reporter=html --reporter=text mocha --reporter=mocha-api-errors server/**/*.spec.js",
    "test:coveralls": "nyc report --reporter=text-lcov | coveralls",
    "test:debug": "cross-env NODE_ENV=test BCRYPT_COST=1 LOG_LEVEL=TRACE nyc --reporter=html --reporter=text mocha --reporter=mocha-api-errors server/**/*.spec.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "~1.18.2",
    "bookshelf": "^0.12.0",
    "bookshelf-touch": "^1.1.4",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "express-jwt-policies": "^2.0.1",
    "express-serializer": "^1.0.1",
    "glob": "^7.1.2",
    "jsonwebtoken": "^8.1.0",
    "knex": "^0.14.2",
    "lodash": "^4.17.4",
    "log4js": "^2.3.12",
    "moment": "^2.19.3",
    "nodemon": "^1.12.1",
    "pg": "^7.4.0",
    "valdsl": "^0.4.5",
    "valib": "^2.0.0"
  },
  "devDependencies": {
    "babel-plugin-istanbul": "^4.1.5",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-iso8601": "^1.0.0",
    "chai-moment": "^0.1.0",
    "chai-objects": "^1.0.0",
    "chance": "^1.0.12",
    "concurrently": "^3.5.1",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.1",
    "docdash": "^0.4.0",
    "doctoc": "^1.3.0",
    "enrich-api-error": "^1.0.2",
    "get-port": "^3.2.0",
    "jsdoc": "^3.5.5",
    "live-server": "^1.2.0",
    "mkdirp": "^0.5.1",
    "mocha": "^4.0.1",
    "mocha-api-errors": "^1.0.1",
    "nyc": "^11.4.0",
    "onchange": "^3.2.1",
    "raml2html": "^6.4.2",
    "rimraf": "^2.6.2",
    "superrest": "^1.0.0",
    "supertest": "^3.0.0",
    "test-value-generator": "^1.0.1"
  }
}
